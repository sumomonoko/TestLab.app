<style>
  h4{
    background: #FFDEAD;
  }
</style>
<div class="container">

  <div class="row no-gutters">
    <div class = "col-10 px-0 my-5 mx-auto">
      <h4 class= "float-left font-weight-bold px-3 rounded-pill">新規会員登録</h4>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row no-gutters form-group w-75 mx-auto">
      <label for="inputPassword" class="col-2 col-form-label mx-5">お名前</label>
      <div class="col-5">
        <%= f.text_field :name, autofocus: true, placeholder: 'ニックネームでも可', autocomplete: "name", class:"form-control rounded mx-5" %>
      </div>
    </div>

    <div class="row no-gutters form-group w-75 mx-auto">
      <label for="inputPassword" class="col-2 col-form-label mx-5">メールアドレス</label>
      <div class="col-5">
        <%= f.email_field :email, autofocus: true, placeholder: 'sample@example.com', autocomplete: "email", class:"form-control rounded mx-5" %>
      </div>
    </div>

    <div class="row no-gutters form-group w-75 mx-auto">
      <label for="inputPassword" class="col-2 col-form-label mx-5">
        パスワード<br>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上 )
        <% end %>
      </label>
      <div class="col-5">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control rounded mx-5" %>
      </div>
    </div>

    <div class="row no-gutters form-group w-75 mx-auto">
      <label for="inputPassword" class="col-2 col-form-label mx-5">パスワード<br>(確認用)</label>
      <div class="col-5">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control rounded mx-5" %>
      </div>
    </div>
    <%= f.submit "新規登録", class:"btn btn-block btn-success w-25 mx-auto my-5" %>
  <% end %>

  <div class="row">
    <div class="col">
      <div class="float-right">
        既に登録済みの方は<%= link_to "こちら" , new_user_session_path %> からログインを行なってください。
      </div>
    </div>
  </div>
</div>